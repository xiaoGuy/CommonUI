<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="VerifyCodeText">

        <attr name="cursorDrawable" format="reference"/>
        <attr name="cursorColor" format="color"/>
        <attr name="verify_hint" format="string"/>
        <attr name="verify_hintColor" format="color"/>
        <attr name="verify_textSize" format="dimension"/>
        <attr name="verify_textColor" format="color"/>
        <!-- 验证码的长度 -->
        <attr name="verifyCodeLength" format="integer"/>
        <!-- 输入框距离底部的间距 -->
        <attr name="editMarginBottom" format="dimension"/>

        <attr name="leftLabel" format="string"/>
        <attr name="leftLabelSize" format="dimension"/>
        <!-- 输入框跟标签的间距 -->
        <attr name="labelPadding" format="dimension"/>
        <attr name="leftIcon" format="reference"/>
        <!-- 获取验证码按钮的字体大小 -->
        <attr name="buttonTextSize" format="dimension"/>
        <attr name="buttonTextColor" format="reference"/>
        <attr name="buttonBackground" format="reference"/>
        <attr name="buttonMarginBottom" format="dimension"/>
        <!-- 重新获取验证码所需等待的时间 -->
        <attr name="resendTime" format="integer"/>
        <!-- 获取验证码按钮可点击时的文字内容 -->
        <attr name="buttonText" format="string"/>
        <attr name="waitingText" format="string"/>

        <attr name="underlineColor" format="color"/>
        <attr name="underlineHeight" format="dimension"/>
        <!-- 下划线是否跟输入框左对齐 -->
        <attr name="underlineAlignLeftEditText" format="boolean"/>

        <attr name="gravityCenterVertical" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="EasyTextView">
        <attr name="textPressedColor" format="color"/>
        <attr name="textDisabledColor" format="color"/>
        <attr name="textNormalColor" format="color"/>

        <attr name="backgroundPressedColor" format="color"/>
        <attr name="backgroundDisabledColor" format="color"/>
        <attr name="backgroundNormalColor" format="color"/>

        <attr name="backgroundRadius" format="dimension"/>
        <attr name="backgroundStrokeWidth" format="dimension"/>
    </declare-styleable>
</resources>