<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- disabled 状态时 -->
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="4dp"/>
            <stroke android:width="1dp" android:color="#bbb"/>
            <padding android:left="10dp"
                     android:right="10dp"
                     android:top="5dp"
                     android:bottom="5dp"/>
        </shape>
    </item>

    <!-- 点击状态，点击状态一定要在普通状态上面 -->
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="4dp"/>
            <stroke android:width="1dp"
                    android:color="#bedda8"/>
            <padding android:left="10dp"
                     android:right="10dp"
                     android:top="5dp"
                     android:bottom="5dp"/>
        </shape>
    </item>

    <!-- 正常状态 -->
    <item>
        <shape>
            <corners android:radius="4dp"/>
            <stroke android:width="1dp"
                    android:color="#7dba50"/>
            <padding android:left="10dp"
                     android:right="10dp"
                     android:top="5dp"
                     android:bottom="5dp"/>
        </shape>
    </item>
</selector>